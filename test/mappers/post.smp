{#selectAll}
	SELECT * FROM post
{/#selectAll}

{#selectById id}

	SELECT * FROM post 
	{@where}
		{@if test="#id"}
			AND id = #id
		{/@if}
	{/@where}

{/#selectById}

{#select fields order}

	SELECT 
		{@trim suffixOverrides=","}
			{@each value="#fields"}
				$item,
			{/@each}
		{/@trim}
	FROM post
	ORDER BY $order DESC

{/#select}

{#update post}
	
	UPDATE post
	{@set}
		{@each value="#post"}
			{@if test="#item"}
				$key = #item,
			{/@if}
		{/@each}
	{/@set}
	{@where}
		{@if test="#post.id"}
			AND id = #post.id
		{/@if}
	{/@where}
	
{/#update}

{#deleteById id}
	DELETE FROM post WHERE id = #id
{/#deleteById}

{#loop test}

	{@each value="#test"}
		key = $key
		i = $index
		{@each value="#item" key="j"}
			($key i = $index, k = #j, t=$item)
		{/@each}
		i = $index,
	{/@each}

{/#loop}

{#fields alias}
    id , title , content , created_at AS $alias
{/#fields}

{#fragment alias}
    SELECT {>fields alias} FROM post
{/#fragment}

{#uppercase}
    SELECT 
    {@case type="upper"}
		id , title , CONTENT , CREATED_AT
    {/@case}
    FROM post
{/#uppercase}
